{% extends 'PolitizrFrontBundle::baseFront.html.twig' %}

{% block title %}Politizr{% endblock title %}
{% block description %}Politizr{% endblock description %}

{% block stylesheets %}
    <style type="text/css" media="screen" >
        @font-face {
            font-family: 'nerisblack';
            src: url('/bundles/politizrfront/fonts/Neris-Black-webfont.eot');
            src: url('/bundles/politizrfront/fonts/Neris-Black-webfont.eot?#iefix') format('embedded-opentype'),
                 url('/bundles/politizrfront/fonts/Neris-Black-webfont.woff') format('woff'),
                 url('/bundles/politizrfront/fonts/Neris-Black-webfont.ttf') format('truetype'),
                 url('/bundles/politizrfront/fonts/Neris-Black-webfont.svg#nerisblack') format('svg');
            font-weight: normal;
            font-style: normal;
        }
        
        @font-face {
            font-family: 'nerissemibold';
            src: url('/bundles/politizrfront/fonts/Neris-SemiBold-webfont.eot');
            src: url('/bundles/politizrfront/fonts/Neris-SemiBold-webfont.eot?#iefix') format('embedded-opentype'),
                 url('/bundles/politizrfront/fonts/Neris-SemiBold-webfont.woff') format('woff'),
                 url('/bundles/politizrfront/fonts/Neris-SemiBold-webfont.ttf') format('truetype'),
                 url('/bundles/politizrfront/fonts/Neris-SemiBold-webfont.svg#nerissemibold') format('svg');
            font-weight: normal;
            font-style: normal;
        
        }
        
        center {
            font-family: 'nerisblack';
            margin-top: 100px; 
            color: #fff; 
            text-shadow: 0px 0px 20px rgba(0, 0, 0, 1);
        }
        
        i.iconPltzrLogoAlt { font-size: 42px;}
        
        p { font-size: 14px; font-family: 'nerissemibold';}
        
        a {
            color: #fff;
            text-decoration: none;              
        }
        a:hover {text-decoration: underline;}
        
        span {
            display: inline-block; 
            font-size: 10px; 
            text-transform: uppercase; 
            margin: 0 0 10px 0;
        }
        
        h1 {
            margin: 0 0 40px 0;
            padding: 0;
            font-weight: normal;
            font-size: 50px;
            -webkit-text-size-adjust : 80%;
        }
    </style>
{% endblock %}

{% block javascriptHeader %}
{% endblock %}

{% block responsiveHeader %}
{% endblock %}

{% block body %}
    <body>
        {% include 'PolitizrFrontBundle:Navigation\\Social:_analytics.html.twig' %}
        {% block main %}
        {% endblock main %}

        {% block javascriptFooter %}
            {{ parent() }}

            <script>
                $(function() {
                    $('#ajaxGlobalLoader').hide();
                });
            </script>
        {% endblock javascriptFooter %}
    </body>
{% endblock body %}
