{% if app.user %}
    {% if not owner %}
        {% if follower %}
            <div class="stopFollowing" action="followDebate" uuid="{{ object.uuid }}" way="unfollow">
                <div class="actionText">Supprimer&nbsp;de&nbsp;mon&nbsp;fil&nbsp;d'actualité</div>
                <i class="icon-remove"></i>
            </div>
        {% else %}
            <div class="startFollowing" action="followDebate" uuid="{{ object.uuid }}" way="follow">
                <div class="actionText">&nbsp;Ajouter&nbsp;à&nbsp;mon&nbsp;fil&nbsp;d'actualité</div>
                <i class="icon-add"></i>
            </div>
        {% endif %}
    {% endif %}    
{% endif %}
