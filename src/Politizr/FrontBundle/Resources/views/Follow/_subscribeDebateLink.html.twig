{# beta #}
{% if app.user %}
    {% if not owner %}
        {% if follower %}
            <div class="stopFollowing" action="followDebate" uuid="{{ object.uuid }}" way="unfollow">
                <div class="actionText">Ne plus suivre</div>
                <i class="icon-remove"></i>
            </div>
        {% else %}
            <div class="startFollowing" action="followDebate" uuid="{{ object.uuid }}" way="follow">
                <div class="actionText">Suivre cette discussion</div>
                <i class="icon-add"></i>
            </div>
        {% endif %}
    {% endif %}
{% else %}
    <div class="startFollowing">
        <div class="actionText"><a href="{{ path('Inscription') }}">Suivre cette discussion</a></div>
        <i class="icon-add"></i>
    </div>
{% endif %}
