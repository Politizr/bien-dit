{% if app.user %}
    {% if not owner %}
        {% if follower %}
            <div class="stopFollowing" action="followDebate" uuid="{{ object.uuid }}" way="unfollow">
                <i class="iconCross"></i>
                Supprimer&nbsp;de&nbsp;mon&nbsp;fil&nbsp;d'actualité
            </div>
        {% else %}
            <div class="startFollowing" action="followDebate" uuid="{{ object.uuid }}" way="follow">
                <i class="iconCheckInSquare"></i>
                &nbsp;Ajouter&nbsp;à&nbsp;mon&nbsp;fil&nbsp;d'actualité
            </div>
        {% endif %}
    {% endif %}    
{% else %}
    <a href="{{ path('Inscription') }}">Inscription</a>
{% endif %}
