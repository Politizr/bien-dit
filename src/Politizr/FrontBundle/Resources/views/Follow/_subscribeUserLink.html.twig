{# beta #}
{% if app.user %}
    {% if app.user.id != object.id %}
        {% if follower %}
            <div class="stopFollowing" action="followUser" uuid="{{ object.uuid }}" way="unfollow">
                <div class="actionText">Ne plus suivre</div>
                <i class="icon-remove"></i>
            </div>
        {% else %}
            <div class="startFollowing" action="followUser" uuid="{{ object.uuid }}" way="follow">
                <div class="actionText">Suivre cet utilisateur</div>
                <i class="icon-add"></i>
            </div>
        {% endif %}
    {% endif %}
{% else %}
    <div class="startFollowing">
        <div class="actionText"><a href="{{ path('Inscription') }}">Suivre cet utilisateur</a></div>
        <i class="icon-add"></i>
    </div>
{% endif %}
