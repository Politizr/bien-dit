<div class="card myactivity">
    {% include 'PolitizrFrontBundle:User:_summary.html.twig' with { 'user': user, 'withSocialLinks': false, 'withMandates': false } only %}
    <div class="coloredBg">
        <div class="activity cardFollowing">
            {% if way == 'up' %}
                {% if app.user.id == user.id %}Vous suivez {{ followUser }} : ses publications s’affichent dans votre fil d’actualité.{% else %}{{ user }} a suivi {{ followUser }}.{% endif %}
            {% else %}
                Vous ne suivez plus {{ followUser }} : ses publications ne s’affichent plus dans votre fil d’actualité.
            {% endif %}
            </div>
        <h5>{% include 'PolitizrFrontBundle:Navigation\\DateTime:_publishedAt.html.twig' with { 'subject': timelineRow } only %}</h5>
        {% include 'PolitizrFrontBundle:User:_summary.html.twig' with { 'user': followUser, 'withSocialLinks': false, 'withMandates': false } only %}
    </div>
</div>
