<div class="commentsContentHeader">
    <div class="ajaxLoader" style="display: none;">
        <div class="ajaxLoaderSpinner"></div><div class="ajaxLoaderBg"></div><div class="ajaxLoaderBlockClick"></div>
    </div>
    <div class="commentsInfos">
        {% include 'PolitizrFrontBundle:User:_authorMini.html.twig' with { 'user': comment.user } only %}, {% include 'PolitizrFrontBundle:Navigation\\DateTime:_publishedAtTiny.html.twig' with { 'dateTimeAt': comment.publishedAt } only %}
    </div>
    <div class="notes commentsNote withLoaderInside">
        <div class="ajaxLoader" style="display: none;">
            <div class="ajaxLoaderSpinner"></div><div class="ajaxLoaderBg"></div><div class="ajaxLoaderBlockClick"></div>
        </div>
        {{ comment | linkNoteComment }}
    </div>
</div>
<div class="commentsText">{{ comment.description | purify }}</div>
