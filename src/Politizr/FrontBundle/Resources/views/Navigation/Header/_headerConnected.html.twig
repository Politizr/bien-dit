<div class="center">
    <div id="headerLeft">
        <div id="logo"><a href="{{ path('Homepage'~profileSuffix) }}"><i class="icon-pltzr-logo"></i><span>politizr</span></a></div>
        <a href="{{ path('Homepage'~profileSuffix) }}" class="currentPage">accueil</a>
        <a href="#">top</a>
        <a href="#">rechercher</a>
    </div>
    <div id="headerRight">
        <a href="{{ path('DebateDraftNew'~profileSuffix) }}" class="newSubject"><i class="icon-plane"></i>rédiger un nouveau sujet</a>
        <div class="headerSeparator"></div>
        <div id="notifCounter">
            <i class="icon-notif" action="toggleNotifBox">
                <span class="notifNew" id="notifCounterNew">-</span>
            </i>
            <div id="notifBox" class="withLoaderInside" style="display: none;">
                {% include 'PolitizrFrontBundle:Navigation\\Xhr:_xhrLocalLoader.html.twig' %}
            </div>
        </div>
        <div class="headerSeparator"></div>
        <div id="reputCounter">
            <a href="{{ path('Profile'~profileSuffix) }}">
                <i class="icon-cup"></i><span class="reputPoints">-</span>
                <span class="badgesCounter">
                    <span class="badgesCounterGold">-</span>
                    <span class="badgesCounterSilver">-</span>
                    <span class="badgesCounterBronze">-</span>
                </span>
            </a>
        </div>
        <div class="headerSeparator"></div>
        <div id="userLogged">
            <a href="{{ path('Profile'~profileSuffix) }}">
                {{ app.user.firstname }} {{ app.user.name }}
                <span class="avatar30">{{ app.user | icon }}</span>
            </a>
        </div>
        <div class="headerSeparator"></div>
        <div id="menuButton"><i class="icon-menu" action="toggleMenu"></i></div>
        <div id="menu" style="display: none;">
            <div id="menuArrow"><i class="icon-arrow-up"></i></div> 
            <div id="primaryMenu">
                <a href="{{ path('Drafts'~profileSuffix) }}">Mes brouillons</a>
                <a href="{{ path('MyPublications'~profileSuffix) }}">Mes publications</a>
                <a href="{{ path('Profile'~profileSuffix) }}">Modifier mon profil</a>
            </div>
            <div id="secondaryMenu">
                <a href="{{ path('Help') }}"><b>Aide</b></a>
                <a href="{{ path('EditNotifications'~profileSuffix) }}">Réglages des notifications</a>
                <a href="{{ path('EditPerso'~profileSuffix) }}">Mon compte</a>
                <div id="deconnect"><a href="{{ path('Logout') }}">Déconnexion</a></div>
            </div>
        </div>
    </div>
</div>