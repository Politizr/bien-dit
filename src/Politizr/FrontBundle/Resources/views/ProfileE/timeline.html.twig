{% extends 'PolitizrFrontBundle::layoutE.html.twig' %}

{% block main %}
	<div id="main" class="container">
		<h3>Timeline</h3>
        {% for document in documents %}
			{% if document.type == constant('Politizr\\Model\\PDocument::TYPE_DEBATE') %}
				{% include 'PolitizrFrontBundle:Fragment\\Debate:ListRow.html.twig' with { 'debate': document.childObject } %}
			{% else %}
				{% include 'PolitizrFrontBundle:Fragment\\Reaction:ListRow.html.twig' with { 'reaction': document.childObject } %}
			{% endif %}
			<hr>
		{% else %}
			<div class="no-results">
				<a class="btn btn-primary" href="{{ path('SuggestionsC') }}">Suivez plus de d√©bat ou d'utilisateurs!</a>
			</div>
		{% endfor %}
	</div>
{% endblock main %}

{% block javascriptFooter %}
	{{ parent() }}
    
    {% include 'PolitizrFrontBundle:JS:follow.js.twig' %}
    {% include 'PolitizrFrontBundle:JS:followers.js.twig' %}
    {% include 'PolitizrFrontBundle:JS:notation.js.twig' %}
{% endblock javascriptFooter %}
