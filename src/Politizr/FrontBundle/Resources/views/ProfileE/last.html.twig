{% extends 'PolitizrFrontBundle::layoutE.html.twig' %}


{% block main %}
	<div id="main" class="container">
		<div id="debates">
			<h3>Derniers débats publiés</h3>
			<div>
				{% for debate in debates %}
					{% include 'PolitizrFrontBundle:Fragment\\Debate:ListRow.html.twig' with { 'debate': debate } %}
					<hr>
				{% endfor %}
			</div>
		</div>
		<div id="users">
			<h3>Derniers débatteurs inscrits</h3>
			<div>
				{% for user in users %}
					{% include 'PolitizrFrontBundle:Fragment\\User:Author.html.twig' with { 'user': user } %}
					<hr>
				{% endfor %}
			</div>
		</div>
		<div id="comments">
			<h3>Derniers commentaires publiés</h3>
			<div>
				{% for comment in comments %}
					{% include 'PolitizrFrontBundle:Fragment\\Comment:ListRow.html.twig' with { 'comment': comment } %}
					<hr>
				{% endfor %}
			</div>
		</div>	
	</div>
{% endblock main %}


{% block javascriptFooter %}
	{{ parent() }}
    
    {% include 'PolitizrFrontBundle:JS:follow.js.twig' %}
    {% include 'PolitizrFrontBundle:JS:followers.js.twig' %}
    {% include 'PolitizrFrontBundle:JS:notation.js.twig' %}
{% endblock javascriptFooter %}
