<script type="text/javascript">
	// clic précédent / suivant
	$("body").on("click", "#boxPagination a", function(e) {
		console.log('*** click boxPagination a');
		console.log('href = ' + $(this).attr('href'));

		e.preventDefault();
		$.ajax({
		  	type: 'GET',
		  	url: $(this).attr('href'),
		  	dataType: 'json',
            {% include 'PolitizrFrontBundle:JS:ajaxError.js.twig' %}
            success: function(data) {
                if (data['error']) {
                    $('#ajax-loader').hide();
                    $('.alert-danger-msg').html(data['error']);
                    $('.alert.alert-danger').show();
                } else {
                    $('#paginatedList').html(data['html']);
                    $('#ajax-loader').hide();
                }
            }
		});
	});
</script>
