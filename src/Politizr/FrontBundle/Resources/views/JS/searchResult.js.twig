<script type="text/javascript">
    // clic précédent / suivant
    $("body").on("click", "a[action='paginate-next']", function(e) {
        console.log('*** click paginate-next');
        console.log('next-page = ' + $(this).attr('next-page'));

        e.preventDefault();
        $.ajax({
              type: 'POST',
              url: "{{ path('SearchPage') }}",
              data: { 'query': $(this).attr('query'), 'next-page': $(this).attr('next-page') },
              dataType: 'json',
            {% include 'PolitizrFrontBundle:JS:ajaxError.js.twig' %}
            success: function(data) {
                if (data['error']) {
                    $('#ajaxGlobalLoader').hide();
                    $('#infoBoxHolder.boxError.notifBoxText').html(data['error']);
                    $('#infoBoxHolder.boxError').show();
                } else {
                    $('#scroll-nav').remove();
                    $('.boxResults').last().after(data['html']);
                    $('#ajaxGlobalLoader').hide();
                }
            }
        });
    });
</script>
