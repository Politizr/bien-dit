<script>
    $("body").on("click", "[action='toggleHelper']", function() {
        $('.helperSlider').hide();
        $('.iconQuestion').css("color", "#b8b9bc");
        $(this).next('.helperSlider').toggle();
        $(this).css("color", "#079db5");
    });
    
    $("body").on("click", "[action='hideHelper']", function() {
        $('.helperSlider').hide();
        $('.iconQuestion').css("color", "#b8b9bc");
    });
</script>