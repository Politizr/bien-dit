<script>
    // **************************** //
    //      Initialisation
    // **************************** //
    $(document).ready(function () {
        $("div[action='user-infos']").hide();
    });

    // **************************** //
    //      Fonctions simples
    // **************************** //

    // Plus d'infos
    $("body").on("click", "div[action='user-more-info']", function() {
        if ($(this).siblings("div[action='user-infos']").is(':visible')) {
            $(this).siblings("div[action='user-infos']").slideUp();
        } else {
            $(this).siblings("div[action='user-infos']").slideDown();
        }
    });

</script>
