<script>
    // **************************** //
    //      AJAX
    // **************************** //

    // Suivre
    // 'a[data-spinner="true"]'
    $("body").on("click", "a[action='follow']", function(e) {
        console.log('*** click follow');
        
        e.preventDefault();

        $.ajax({
            type: 'POST',
            url: "{{ path('Follow') }}",
            context: $(this).closest('.star'),
            data: { 'objectId': $(this).attr('objectId'), 'objectType': $(this).attr('objectType') },
            dataType: 'json',
            {% include 'PolitizrFrontBundle:JS:ajaxError.js.twig' %}
            success: function(data) {
                if (data['error']) {
                    $('#ajax-loader').hide();
                    $('.alert-danger-msg').html(data['error']);
                    $('.alert.alert-danger').show();
                } else {
                    $(this).html(data['html']);
                }
            }
        });

    });

    // Ne plus suivre
    $("body").on("click", "a[action='unfollow']", function(e) {
