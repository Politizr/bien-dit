<script>
    // **************************** //
    //      AJAX
    // **************************** //

    // Noter
    $("body").on("click", "a[action='note']", function(e) {
        console.log('*** click note');
        
        e.preventDefault();

        $.ajax({
            type: 'POST',
            url: "{{ path('Note') }}",
            context: $(this).closest('.notes'),
            data: { 'objectId': $(this).attr('object-id'), 'context': $(this).attr('context'), 'way': $(this).attr('way') },
            dataType: 'json',
            {% include 'PolitizrFrontBundle:JS:ajaxError.js.twig' %}
            success: function(data) {
                $('#ajax-loader').hide();
                if (data['error']) {
                    $('#ajax-loader').hide();
                    $('.alert-danger-msg').html(data['error']);
                    $('.alert.alert-danger').show();
                } else {
                    $(this).html(data['html']);
                }
            }
        });

    });


</script>
