<script>
    // **************************** //
    //      Initialisation
    // **************************** //
    $(document).ready(function () {
        $("div[action='followers-c-list']").hide();
        $("div[action='followers-q-list']").hide();
    });

    // **************************** //
    //      Fonctions simples
    // **************************** //

    // Ouverture box followers
    $("body").on("click", "a[action='show-followers-c-list']", function() {
        if ($(this).siblings("div[action='followers-c-list']").is(':visible')) {
            $(this).siblings("div[action='followers-c-list']").slideUp();
        } else {
            $(this).siblings("div[action='followers-q-list']").slideUp();
            $(this).siblings("div[action='followers-c-list']").slideDown();
        }
    });

    $("body").on("click", "a[action='show-followers-q-list']", function() {
        if ($(this).siblings("div[action='followers-q-list']").is(':visible')) {
            $(this).siblings("div[action='followers-q-list']").slideUp();
        } else {
            $(this).siblings("div[action='followers-c-list']").slideUp();
            $(this).siblings("div[action='followers-q-list']").slideDown();
        }
    });

    // **************************** //
    //      POST
    // **************************** //
</script>
