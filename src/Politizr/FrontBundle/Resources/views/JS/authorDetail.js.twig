<script>
    // **************************** //
    //      Initialisation
    // **************************** //
    $(document).ready(function () {
        $('#followersCList').hide();
        $('#followersQList').hide();
    });

    // **************************** //
    //      Fonctions simples
    // **************************** //

    // Ouverture box followers
    $("body").on("click", "#showFollowersCList", function() {
        $('#followersCList').show();
    });

    $("body").on("click", "#showFollowersQList", function() {
        $('#followersQList').show();
    });

    // Fermeture box followers
    $("body").on("click", "#closeFollowersCList", function() {
        $('#followersCList').hide();
    });

    $("body").on("click", "#closeFollowersQList", function() {
        $('#followersQList').hide();
    });


    // **************************** //
    //      POST
    // **************************** //
</script>
