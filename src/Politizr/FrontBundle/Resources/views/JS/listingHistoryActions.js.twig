<script>
    // **************************** //
    //      Initialisation
    // **************************** //
    $(document).ready(function () {
        historyActionsList();
    });

    // Page suivante
    $("body").on("click", "a[action='paginate-next']", function(e) {
        console.log('*** click paginate-next');

        console.log($(this).attr('offset'));
        historyActionsList($(this).attr('offset'));
    });

    // Chargement pagin√© de la liste
    function historyActionsList (offset) {
        offset = (typeof offset === "undefined") ? 0 : offset;
        $.ajax({
            type: 'POST',
            url: "{{ path('HistoryActionsList') }}",
            data: { 'offset': offset },
            dataType: 'json',
            {% include 'PolitizrFrontBundle:JS:ajaxError.js.twig' %}
            success: function(data) {
                if (data['error']) {
                    $('.alert-danger-msg').html(data['error']);
                    $('.alert.alert-danger').show();
                } else {
                    $('#scroll-nav').remove();

                    $('#history').append(data['html']);
                }
                $('#ajax-loader').hide();
            }
        });    
    }

</script>
