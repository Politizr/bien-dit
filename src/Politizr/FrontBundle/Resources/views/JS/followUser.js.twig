    // suivre / Se désabonner
    $("body").on("click", "[action='followUser']", function(e) {
        console.log('*** click followUser');

        var context = $(this).closest('.subscribe');
        var localLoader = $(this).closest('.subscribe').find('.ajaxLoader').first();
        
        $.ajax({
            type: 'POST',
            url: "{{ path('FollowUser') }}",
            context: context,
            data: { 'objectId': $(this).attr('object-id'), 'way': $(this).attr('way') },
            dataType: 'json',
            {% include 'PolitizrFrontBundle:JS:ajaxErrorLocalLoader.js.twig' %}
            success: function(data) {
                localLoader.hide();
                if (data['error']) {
                    $('#infoBoxHolder .boxError .notifBoxText').html(data['error']);
                    $('#infoBoxHolder .boxError').show();
                } else {
                    // MAJ du bouton suivre / Se désabonner
                    $(this).html(data['html']);

                    // @todo refactoring / à supprimer?
