<div class="addTag" id="editTagZone-{{ zoneId }}" tagTypeId="{{ tagTypeId }}" uuid="{{ object.uuid }}" newTag="{{ newTag }}" path="{{ pathCreate }}">

    <div class="editableTagList">
        {% for tag in tags %}
            {% include 'PolitizrFrontBundle:Tag:_detailEditable.html.twig' with { 'uuid': object.uuid, 'tag': tag, 'path': pathDelete } %}&nbsp;
        {% endfor %}
    </div>

    {# Sélection #}
    <input type="text" class="selectedTag" placeholder="saisissez une nouvelle thématique" />
    <input type="hidden" class="selectedTagUuid" />
    <button type="button" action="addTag"><i class="iconCheck"></i></button>
</div>