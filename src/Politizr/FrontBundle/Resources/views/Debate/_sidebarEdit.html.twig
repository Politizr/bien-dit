{# beta #}
<div class="sidebarPostEdition">    
    <div class="sidebarPostAction">
        {{ app.user | isAuthorizedToPublishDebate(debate.uuid) }}

        <div class="actionSave withLoaderInside saved">
            {% include 'PolitizrFrontBundle:Navigation\\Xhr:_xhrLocalLoader.html.twig' %}
            <a action="debateSave" uuid="{{ debate.uuid }}"><i class="icon-draft"></i>Enregistrer</a>
        </div>

        <div class="secondaryActions">
            <!--<a href="#">Prévisualiser la publication</a>-->
            <a action="debateDelete" uuid="{{ debate.uuid }}">Supprimer mon brouillon</a>
            <a href="{{ path('Drafts'~profileSuffix()) }}">Liste de mes brouillons</a>
        </div>
    </div>

    <div class="sidebarEditTag">
        <h5>Type de publication</h5>
        <div class="notice">
            <i class="icon-info"></i><b>Cochez le(s) type(s) associé(s) à votre publication.</b>
        </div>
        {{ debate | editTypeForm }}
    </div>
    
    <div class="sidebarEditTag">
        <h5>Thématiques abordées</h5>
        <div class="notice">
            <i class="icon-info"></i><b>5 thématiques maximum.</b><br>
            Vous devez saisir au moins <b>une thématique géographique (France, région ou département)</b> parmi les thématiques de votre publication.
        </div>
        {# include('includes/helperEditTag.php') #}

        {{ debateTagsEdit(debate, [ constant('Politizr\\Constant\\TagConstants::TAG_TYPE_GEO'), constant('Politizr\\Constant\\TagConstants::TAG_TYPE_THEME') ], 1, true) }}
    </div>
</div>