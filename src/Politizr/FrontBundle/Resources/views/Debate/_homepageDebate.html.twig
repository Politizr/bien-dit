<h2>
    <a href="{{ path('DebateDetail', { 'slug': debate.slug }) }}">
        {{ debate.title }}
    </a>
</h2>
<div class="itemInfo">
    <div class="viewersCounter">
        <i class="iconGraph"></i>
        {{ debate | nbViews }}
    </div>
    <div class="reactionsCounter">
        <i class="iconReaction"></i>
        {{ debate | nbReactions }}
    </div>
    <div class="commentsCounter" action="paragraphCommentsCounter">
        <i class="iconComment"></i>
        {{ debate | nbComments }}
    </div>
    <div class="postNote">
        <div class="notePlus">
            {{ debate.notePos }}<i class="iconNotePlus"></i>
        </div>
        <div class="noteMinus">
            <i class="iconNoteMinus"></i>{{ debate.noteNeg }}
        </div>
    </div>
</div>
<div class="postSummaryTagList">
    {{ debate | docTags }}
</div>
