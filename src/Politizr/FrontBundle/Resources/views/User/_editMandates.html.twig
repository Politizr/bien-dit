{% for formMandate in formMandateViews %}
    <div class="editMandateItem">
        {% form_theme formMandate 'PolitizrFrontBundle:Form:fields.html.twig' %}    
        <form method="POST" name="formMandateUpdate" id="formMandateUpdate">
            {{ form_errors(formMandate) }}

            <div class="editMandateWhatAndWhere">
                {{ form_widget(formMandate.p_q_mandate, { 'attr': {'data-jcf': '{"wrapNative": false, "fakeDropInBody": false, "maxVisibleItems": 10, "flipDropToFit": false}'}}) }}
                {{ form_widget(formMandate.localization, { 'attr': {'placeholder': 'lieu ou circonscription'}}) }}
            </div>
            <!-- @todo HTML/CSS div dates via champ input simple à styler -->
            <span class="dea">de</span>
            <div class="editMandatePeriod">
                {{ form_widget(formMandate.begin_at, { 'attr': {'data-jcf': '{"wrapNative": false, "fakeDropInBody": false, "maxVisibleItems": 10, "flipDropToFit": false}'}}) }}
                <span class="dea">à</span>
                {{ form_widget(formMandate.end_at, { 'attr': {'data-jcf': '{"wrapNative": false, "fakeDropInBody": false, "maxVisibleItems": 10, "flipDropToFit": false}'}}) }}
            </div>
            <div class="mandateActions">
                <a class="editMandateDeleteItem" action="mandateDelete" subjectId="{{ formMandate.vars.value.id }}"><i class="iconRemove"></i>Supprimer ce mandat</a>
                <a class="editMandateCreate" action="mandateUpdate"><i class="iconCheck"></i>Enregistrer</a>
            </div>    
            {{ form_rest(formMandate) }}
        </form>
    </div>
{% endfor %}
