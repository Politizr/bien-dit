{% if user %}
    <div class="avatar60">
        {{ user | photo('user_60') }}
    </div>
    <div class="authorName">
        <span>Par</span>
        {% include 'PolitizrFrontBundle:User:_authorName.html.twig' with { 'user': user } only %}
        {% include 'PolitizrFrontBundle:User:_authorOrganization.html.twig' with { 'user': user } only %}
    </div>
    <div class="authorSubtitle">
        {{ user.subtitle | purify }}
    </div>
{% else %}
    <i>utilisateur supprimé</i>
{% endif %}