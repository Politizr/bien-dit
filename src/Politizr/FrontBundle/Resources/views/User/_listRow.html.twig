<div class="modalItem listProfileOneCol">
    <div class="listProfileOfficial">
        <div class="avatar40">
            {{ user | photo('user_mini') }}
        </div>
        <div class="listProfileRight">
            <div class="authorName">
                {% include 'PolitizrFrontBundle:User:_authorName.html.twig' with { 'user': user } only %}
            </div>
            <div class="authorBio">
                {% include 'PolitizrFrontBundle:User:_authorMandate.html.twig' with { user: user } only %}
            </div>
        </div>
    </div>
    <div class="listProfileFollow">
        <!-- <i class="iconCheckInSquare"></i>Suivre -->
        <div class="subscribe">
            {{ user | linkSubscribeUser }}
        </div>
    </div>
</div>