<form id="listType">
    <input type="radio" class="userFilter" name="userFilterDate[]" value="allDate" id="userAllDate" {% if filters == null or 'allDate' in filters%}checked{% endif %}/>
    <label for="userAllDate">tous</label>
    <input type="radio" class="userFilter" name="userFilterDate[]" value="lastMonth" id="userLastMonth" {% if 'lastMonth' in filters%}checked{% endif %}/>
