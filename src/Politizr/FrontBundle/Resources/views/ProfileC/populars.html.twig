{% extends 'PolitizrFrontBundle::layoutC.html.twig' %}


{% block main %}
	<div id="main" class="container">
		<div id="debates">
			<h3>Débats les plus suivis</h3>
			<div>
				{% for debate in debates %}
					{% include 'PolitizrFrontBundle:Fragment\\Debate:ListRow.html.twig' with { 'debate': debate } %}
					<hr>
				{% endfor %}
			</div>
		</div>
		<div id="users">
			<h3>Élus les plus suivis</h3>
			<div>
				{% for user in users %}
					{% include 'PolitizrFrontBundle:Fragment\\User:Author.html.twig' with { 'pUser': user, 'full': false } %}
					<hr>
				{% endfor %}
			</div>
		</div>
		<div id="comments">
			<h3>Les derniers commentaires</h3>
			<div>
				{% for comment in comments %}
					{% include 'PolitizrFrontBundle:Fragment\\Comment:ListRow.html.twig' with { 'comment': comment, 'docLink': true } %}
					<hr>
				{% endfor %}
			</div>
		</div>	
	</div>
{% endblock main %}


{% block javascriptFooter %}
	{{ parent() }}
    
    {% include 'PolitizrFrontBundle:JS:follow.js.twig' %}
    {% include 'PolitizrFrontBundle:JS:followers.js.twig' %}
    {% include 'PolitizrFrontBundle:JS:notation.js.twig' %}
{% endblock javascriptFooter %}
