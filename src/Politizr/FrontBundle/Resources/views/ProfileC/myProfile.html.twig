{% extends 'PolitizrFrontBundle::layoutC.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    {# medium clone editor #}
    <link rel="stylesheet" href="{{ asset('components/medium-editor/dist/css/themes/bootstrap.min.css') }}"> {# theme #}
{% endblock %}
{% block main %}
    <div id="main" class="container">
        <hr>
        {% include 'PolitizrFrontBundle:Fragment\\User:DetailEdit.html.twig' with { 'user': user, 'form': form } %}
