{% spaceless %}
<tr style="float: left; margin-top: 30px; width: 100%; background: url({{ absolute_url(asset('bundles/politizrfront/imagesMail/h1-useractivity.jpg')) }}); background-position: center center;">
    <td colspan="2" style="float:left; width: 100%; height: 220px; position: relative;">
        <h1 style="line-height: 100%; font-size: 36px; font-weight: 100; color: #fff; position: absolute; bottom: 0px; left: 30px; width: calc(100% - 60px);">Des utilisateurs que vous suivez s’expriment...</h1>
    </td>
</tr>
{% for publication in followedUsersPublications %}
    <tr style="background-color: #FFFFFF; width: 100%;">
        <td colspan="2" style="float:left; width: calc(100% - 60px); margin: 0 30px; padding: 30px 0 20px 0;">
            <a href="{{ publication['authorUrl'] }}" style="text-decoration: none; font-weight: bold; color: inherit;">{{ publication['author'] }}</a> a publié {% if (publication['type'] == constant('Politizr\\Constant\\ObjectTypeConstants::TYPE_DEBATE_COMMENT')) or (publication['type'] == constant('Politizr\\Constant\\ObjectTypeConstants::TYPE_REACTION_COMMENT')) %}<a href="{{ publication['url'] }}" style="text-decoration: none; font-weight: bold; color: inherit;">un commentaire</a>{% else %}"<a href="{{ publication['url'] }}" style="text-decoration: none; font-weight: bold; color: inherit;">{{ publication['title'] }}</a>"{% endif %}{% if (publication['type'] == constant('Politizr\\Constant\\ObjectTypeConstants::TYPE_DEBATE_COMMENT')) or (publication['type'] == constant('Politizr\\Constant\\ObjectTypeConstants::TYPE_REACTION_COMMENT')) %} sur "<a href="{{ publication['documentUrl'] }}" style="text-decoration: none; font-weight: bold; color: inherit;">{{ publication['document'] }}</a>"{% endif %}.
        </td>
    </tr>
    <tr style="background-color: #FFFFFF; width: 100%;">
        <td colspan="2" style="float:left; width: calc(100% - 60px); margin: 0 30px; padding: 0 0 30px 0;">
            <a href="{{ publication['url'] }}" style="float: left; -webkit-border-radius: 15px; -moz-border-radius: 15px; border-radius: 15px; height: 20px; text-decoration: none; padding: 5px 20px; color: #fff; background-color: #3f908c">Lire cette publication</a>
        </td>
    </tr>

    {% if not loop.last %}
        <tr style="background-color: #FFFFFF; width: 100%;">
            <td style="float: left; width: calc(100% - 60px); margin: 0 30px; background-color: #ccc; height: 1px;"></td>
        </tr>
    {% endif %}
{% endfor %}
<tr style="float: left; background-color: #ddcdb8; width: 100%; margin-bottom: 30px;">
    <td colspan="2" style="float:left; width: calc(100% - 60px); margin: 0 0 0 30px; padding: 30px 0 20px 0;">
        <a href="{% if user.qualified %}{{ url('HomepageE') }}{% else %}{{ url('HomepageC') }}{% endif %}" style="float: left; -webkit-border-radius: 15px; -moz-border-radius: 15px; border-radius: 15px; height: 20px; text-decoration: none; padding: 5px 20px; margin-bottom: 10px; color: #fff; background-color: #c65039">Voir mon fil d'actualité</a>
        <a href="http://politizr.help/article/suivre-un-utilisateur-et-voir-ses-publications-dans-le-fil-dactualite/" style=" float: right; text-decoration: none; color: #808080; margin: 5px 0 10px 0;"><img src="{{ absolute_url(asset('bundles/politizrfront/imagesMail/icon-info.png')) }}" style="float: left; margin: 2px 5px 0 0;"/>En savoir plus sur les abonnements</a>
    </td>
</tr>
{% endspaceless %}
