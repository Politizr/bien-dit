<div class="notifItemHeader">
    <i class="{% include 'PolitizrFrontBundle:Notification:_notificationIcon.html.twig' %}"></i>
    {{ notification.createdAt | localizeddate('medium', 'short', app.request.locale, "Europe/Paris", "EEEE d MMMM Ã  HH'h'mm" ) | capitalize }}
    {% if not notification.checked %}
        <i action="notificationCheck" class="iconCheck" subjectId="{{ notification.id }}"></i>
    {% else %}
        <i class="iconCheck"></i>
    {% endif %}
</div>
<div class="notifItemContent">
    <span {% if not notification.checked %}class="notifHighlight"{% endif %} subjectId="{{ notification.id }}">
        {% include 'PolitizrFrontBundle:Notification:_notificationMessage.html.twig' with { 'type': constant('Politizr\\Constant\\NotificationConstants::TYPE_SCREEN')} %}
    </span>
</div>
