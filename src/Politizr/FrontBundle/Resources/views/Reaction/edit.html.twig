{% extends 'PolitizrFrontBundle::layoutConnected.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    {# @todo html/css jqueryui (w. only autocomplete widget) > à styler / thème UI (?) #}
    <link rel="stylesheet" href="{{ asset('bundles/politizrfront/css/jquery-ui.min.css') }}">
{% endblock stylesheets %}

{% block javascriptHeader %}
    {{ parent() }}

    <script type="text/javascript" src="{{ asset('bundles/politizrfront/js/jquery.cycle2.min.js') }}"></script>  
    <script type="text/javascript" src="{{ asset('bundles/politizrfront/js/jquery-ui.autocomplete.min.js') }}"></script>
{% endblock javascriptHeader %}

{% block header %}
    {% embed 'PolitizrFrontBundle:Navigation\\Header:_headerConnected.html.twig' %}
        {% block socialLinks %}{% endblock socialLinks %}
    {% endembed %}
{% endblock header %}

{% block modalBox %}
    {{ parent() }}

    {% include 'PolitizrFrontBundle:Reaction:_modalEditUpload.html.twig' %}
{% endblock modalBox %}


{% block fixedActions %}
    <!-- @todo html/css loader ajax sur l'ensemble des boutons d'actions et pas action par action -->
    <div id="fixedActions">
        <div class="ajaxLoader" style="display: none;">
            <i class="iconSpin5 animateSpin"></i>
            <div class="ajaxLoaderBg"></div>
        </div>
        <div class="actionSave">
            <a action="reactionSave" subjectId="{{ reaction.id }}"><i class="iconDraft"></i>sauvegarder</a>
        </div>
        <div class="actionPublish">
            <a action="reactionPublish" subjectId="{{ reaction.id }}"><i class="iconPublish"></i>publier</a>
        </div>
        <div class="actionDelete">
            <!-- @todo html/css à prévoir & styler -->
            <a action="reactionDelete" subjectId="{{ reaction.id }}"><i class="iconCross"></i>supprimer</a>
        </div>
    </div>
{% endblock fixedActions %}

{% block main %}
    <div id="main">
        <form method="POST" name="reaction" id="formReactionUpdate" class="autoSubmitForm">
            <div class="postSummary">
                <div class="pad40">
                    <div class="postSummaryFooter">
                        <!-- @todo fonctionnel > est-ce bien raisonnable de disposer d'un lien "normal" au niveau d'un écran d'édition? -->
                        <div class="postSummaryGotoParent">
                            {{ reaction | linkParentReaction }}
                        </div>
                        {{ form_widget(form.title, { 'attr': {'class': 'postSummaryTitle', 'placeholder': 'Donnez un titre à votre réaction'}}) }}
                    </div>
                </div>
                <div id="bigCamera" action="modalUploadOpen"><i class="iconCamera"></i><i class="iconNotifYes"></i></div>

                <div id="illustrationMain">
                    {{ reaction | image('debate_header') }}
                </div>
            </div>
            <div id="illustration_l">
                {{ reaction | image('debate_header') }}
            </div>
            <div id="illustration_r">
                {{ reaction | image('debate_header') }}
            </div>
            <div id="copyrightHolder">
                <i class="iconCopyright" action="showCopyright"></i>
                <div id="copyrightBox" style="display: none;" action="showCopyright">
                    <i class="iconArrowUp"></i>
                    <div id="copyright">
                        {{ reaction.copyright | raw }}
                    </div>
                </div>
            </div>

            <div id="lateralHolder">
                <div id="lateralInfo">
                    <i class="iconInfo"></i><br>
                    <b>Attention, une fois publié, vous ne pourrez plus modifier votre réaction.</b>
                </div>
            </div>
            
            <div id="switchEditionMode">
                <div id="swithEditionIndependentEdition" action="activeComparedEdition" class="swithEdition">Rédaction comparée<span><i class="iconSwitchRight"></i>Rédaction autonome</span></div>
                <div id="swithEditionComparedEdition" action="activeIndenpendentEdition" class="swithEdition" style="display: none;"><span>Rédaction comparée<i class="iconSwitchLeft"></i></span>Rédaction autonome</div>
            </div>
                
            <div id="postText">
                <div class="paragraph">
                    <i class="iconQuestion" action="toggleHelper"></i>
                    <div class="helperSlider helperSliderLeft" style="display: none;">
                        <i class="iconArrowUp"></i>
                        <i class="iconCross" action="hideHelper"></i>
                        <h4>éditer un champ texte</h4>
                        {% include 'PolitizrFrontBundle:Navigation\\Helper:_edition.html.twig' %}
                    </div>
                    <div class="editable description">
                        {{ reaction.description | raw }}
                    </div>
                </div>
            </div>

            <div id="originalText" class="withLoaderInside" style="display: none;">
                <div class="ajaxLoader" style="display: none;"><i class="iconSpin5 animateSpin"></i><div class="ajaxLoaderBg"></div></div>
                <div class="postTitle">
                    {{ parent.title }}
                </div>
                <div class="authorName">
                    <span>Par</span>
                    {% include 'PolitizrFrontBundle:User:_authorName.html.twig' with { 'user': parent.user } only %}
                    {% include 'PolitizrFrontBundle:User:_authorOrganization.html.twig' with { 'user': parent.user } only %}
                </div>
                {% for paragraph in paragraphs %}
                    <div class="paragraph">
                        <p>{{ paragraph | raw }}</p>
                    </div>
                {% endfor %}
            </div>

            {# hidden form inputs filled by js #}
            {{ form_row(form.description) }}
            {{ form_rest(form) }}
        </form>
    </div>
{% endblock main %}

{% block javascriptFooter %}
    {{ parent() }}

    <script type="text/javascript" src="{{ asset('bundles/politizrfront/js/medium-editor.min.js') }}"></script>  
    <script type="text/javascript" src="{{ asset('bundles/politizrfront/js/jquery.form.min.js') }}"></script>

    {% include 'PolitizrFrontBundle:JS\\Document:medium.js.twig' %}
    {% include 'PolitizrFrontBundle:JS\\Document:edit.js.twig' %}
    {% include 'PolitizrFrontBundle:JS\\Document:editPhoto.js.twig' %}
{% endblock javascriptFooter %}
