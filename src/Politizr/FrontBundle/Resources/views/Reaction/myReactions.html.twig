{% extends 'PolitizrFrontBundle::layoutConnected.html.twig' %}

{% block title %}
    {{ parent() }} - Mes réactions
{% endblock title %}

{% block main %}
    <div id="publicationsList">
        <h1>Mes réactions</h1>

        {% if nbReactions == 0 %}
            <div id="noPublications">Vous n'avez publié aucune réaction.</div>
        {% else %}
            <div id="listContent">
            </div>
        {% endif %}
    </div>
{% endblock main %}

{% block javascriptFooter %}
    {{ parent() }}

    {% if nbReactions > 0 %}
        <script>
            var xhrRoute = ROUTE_REACTION_MY_REACTIONS;
            var xhrMethod = 'myReactionsPaginated';
        </script>
        {% javascripts
            '@PolitizrFrontBundle/Resources/public/js/politizr/document/myContributions.js'
            filter='uglifyjs2' %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endif %}
{% endblock javascriptFooter %}
