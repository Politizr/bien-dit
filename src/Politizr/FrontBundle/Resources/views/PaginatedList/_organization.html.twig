{% spaceless %}
    <div class="modalSidebar">
        <h1>{{ subject.title }}</h1>
        <div class="organizationInfo">
            <div class="organization">{{ subject.initials }}</div>
            {% if subject.url %}
                <a class="organizationLink" href="{{ subject.url }}" target="_blank"><i class="iconGoTo"></i>Site officiel</a>
            {% endif %}
        </div>
        <div class="listCriteria listCriteriaTabs">
            <form id="listType">
                <input type="radio" class="type" name="type" id="userType" value="user" url="{% include 'PolitizrFrontBundle:Navigation\\Xhr:_xhrPath.html.twig' with {
                        'xhrRoute': 'ROUTE_MODAL_ORGANIZATION_USER_LIST',
                        'xhrService': 'modal',
                        'xhrMethod': 'organizationUserList',
                        'xhrType': 'RETURN_HTML',
                    } only %}" {% if defaultType == 'user'%}checked{% endif %}/>
                <label for="userType">profils</label>
            </form>
            {% include 'PolitizrFrontBundle:PaginatedList:_defaultOrderFilters.html.twig' with { 'defaultOrderFilters': defaultOrderFilters } only %}
        </div>
        <div class="listCriteria criteriaSidebar">
            <form id="listOrder"></form>
            <form id="listFilter"></form>
        </div> 
    </div>
    <div id="paginatedList" class="listContainer" withFilters="true" data-uuid="{{ subject.uuid }}">
        <div id="listContent" class="modalList withSidebar"></div>
    </div>
{% endspaceless %}
