<h1>Suggestions de débats</h1>
<div id="paginatedList" url="{{ path('DailyDebateList') }}">
    <div class="listCriteria">
        <div class="criteriaOrders">
            <form id="listOrder">
                <input type="radio" class="order" name="order" id="last" value="last" checked/>
                <label for="last"><i class="iconCheck"></i>dernier</label>
                <input type="radio" class="order" name="order" id="bestNote" value="bestNote" />
                <label for="bestNote"><i class="iconCheck"></i>mieux notés</label>
                <input type="radio" class="order" name="order" id="mostFollowed" value="mostFollowed" />
                <label for="mostFollowed"><i class="iconCheck"></i>plus suivis</label>
            </form>
        </div>

        <div class="criteriaChoices">
            <form id="listFilter">
                <span class="filterBy">filtrer par :</span>
                <!-- @todo html/css virer les id sur les checkbox -->
                <input type="checkbox" class="filter" name="filters[]" id="suggestion" value="suggestion"/>
                <label for="suggestion"><i class="iconCheck"></i>suggérés</label>
                <input type="checkbox" class="filter" name="filters[]" id="newest" value="newest"/>
                <label for="newest"><i class="iconCheck"></i>les plus récents</label>
                <input type="checkbox" class="filter" name="filters[]" id="qualified" value="qualified" />
                <label for="qualified"><i class="iconCheck"></i>élus uniquement</label>
            </form>
        </div>
    </div>
    <div id="listContent"></div>
</div>