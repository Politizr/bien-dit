{% extends 'PolitizrFrontBundle::baseFront.html.twig' %}

{% block title %}Politizr{% endblock title %}
{% block description %}Politizr{% endblock description %}

{% block metaopengraph %}
    {% block ogImage %}{% render controller("PolitizrFrontBundle:SocialNetworks:ogImage") %}{% endblock ogImage %}
    <meta property="og:site_name" content="Politizr" /> 
    <meta property="og:title" content="{% block ogTitle %}Politizr{% endblock ogTitle %}" /> 
    <meta property="og:url" content="{% block ogUrl %}{{ app.request.uri }}{% endblock ogUrl %}" /> 
    <meta property="og:description" content="{% block ogDescription %}Politizr{% endblock ogDescription %}" />
{% endblock metaopengraph %}

{% block stylesheets %}
    {{ parent() }}

    {# @todo html/css fixer les incompatibilités de style entre styleUser.css & stylePublic.css #}
    <link rel="stylesheet" href="{{ asset('bundles/politizrfront/css/stylePublic.css') }}">
{% endblock %}

{% block wrapper %}
    {% block header %}
        {% include 'PolitizrFrontBundle:Navigation:header.html.twig' %}
    {% endblock %}

    {% block notifications %}
        {% include 'PolitizrFrontBundle:Notification:list.html.twig' %}
    {% endblock notifications %}

    {% block content %}
    {% endblock content %}

    {% block footer %}
        {% include 'PolitizrFrontBundle:Navigation:footerPublic.html.twig' %}
    {% endblock %}
{% endblock wrapper %}

{% block javascriptFooter %}
    {{ parent() }}
    {% include 'PolitizrFrontBundle:JS:global.js.twig' %}
    {% include 'PolitizrFrontBundle:JS:share.js.twig' %}
    {% include 'PolitizrFrontBundle:JS:modalOpening.js.twig' %}

    {% include 'PolitizrFrontBundle:JS:login.js.twig' %}

    {% include 'PolitizrFrontBundle:JS:onSuccessImgLiquid.js.twig' %}
    {% include 'PolitizrFrontBundle:JS:onSuccessSticky.js.twig' %}
    
    {% include 'PolitizrFrontBundle:JS:listingPaginated.js.twig' %}

    {% include 'PolitizrFrontBundle:JS:globalDocumentReady.js.twig' %}    
{% endblock javascriptFooter %}
