{% extends 'PolitizrFrontBundle::layoutConnected.html.twig' %}

{% block title %}
    {{ parent() }} - Mes brouillons
{% endblock title %}

{% block main %}
    <div id="publicationsList">
        <h1>Brouillons</h1>
        <div id="listContent">
        </div>
    </div>
{% endblock main %}

{% block javascriptFooter %}
    {{ parent() }}

    <script>
        var xhrRoute = ROUTE_DOCUMENT_DRAFTS;
        var xhrMethod = 'draftsPaginated';
    </script>
    {% javascripts
        '@PolitizrFrontBundle/Resources/public/js/politizr/document/myPublications.js'
        filter='uglifyjs2' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock javascriptFooter %}
