{% extends 'PolitizrFrontBundle::layoutConnected.html.twig' %}

{% block title %}
    {{ parent() }} - Mes brouillons
{% endblock title %}

{% block main %}
    <div id="publicationsList">
        <h1>Brouillons</h1>

        {% if nbDrafts == 0 %}
            <div id="noPublications">Vous n'avez rédigé aucun brouillon.</div>
        {% else %}
            <div id="listContent">
            </div>
        {% endif %}
    </div>
{% endblock main %}

{% block javascriptFooter %}
    {{ parent() }}

    {% if nbDrafts > 0 %}
        <script>
            var xhrRoute = ROUTE_DOCUMENT_DRAFTS;
            var xhrMethod = 'draftsPaginated';
        </script>
        {% javascripts
            '@PolitizrFrontBundle/Resources/public/js/politizr/document/myContributions.js'
            filter='uglifyjs2' %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endif %}
{% endblock javascriptFooter %}
