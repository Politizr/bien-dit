{% if app.user %}
    {% if not pos %}
        <div class="notePlus" action="note" subjectId="{{ object.id }}" type="{{ type }}" way="up">
            {{ object.notePos }}<i class="iconNotePlus"></i>
        </div>
    {% else %}
        <div class="notePlus blockedVote">
            {{ object.notePos }}<i class="iconNotePlus"></i>
            {% include 'PolitizrFrontBundle:Reputation:_cannotNotatePos.html.twig' with { 'isOwnDocument': isOwnDocument, 'hasAlreadyNotePos': hasAlreadyNotePos } only %}
        </div>
    {% endif %}
    {% if isAuthorizedToNotateNeg %}
        {% if not neg %}
            <div class="noteMinus" action="note" subjectId="{{ object.id }}" type="{{ type }}" way="down">
                <i class="iconNoteMinus"></i>{{ object.noteNeg }}
            </div>
        {% else %}
            <div class="noteMinus blockedVote">
                <i class="iconNoteMinus"></i>{{ object.noteNeg }}
            </div>
        {% endif %}
    {% else %}
        <div class="noteMinus blockedVote">
            <i class="iconNoteMinus"></i>{{ object.noteNeg }}
        </div>
        {% include 'PolitizrFrontBundle:Reputation:_cannotNotateNeg.html.twig' with { 'isOwnDocument': isOwnDocument, 'hasAlreadyNoteNeg': hasAlreadyNoteNeg, 'isAuthorizedToNotateNeg': isAuthorizedToNotateNeg, 'score': score, 'minScore': minScore } only %}
    {% endif %}
{% else %}
    <div class="notePlus">
        {{ object.notePos }}<i class="iconNotePlus"></i>
    </div>
    <div class="noteMinus">
        <i class="iconNoteMinus"></i>{{ object.noteNeg }}
    </div>
    <a href="{{ path('Inscription') }}">M'inscrire pour noter</a>
{% endif %}
