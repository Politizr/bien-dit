{% extends layout %}

{% block inscriptionSteps %}
    {% include 'PolitizrFrontBundle:Security:electedSteps.html.twig' with { 'step': 3 } only %}
{% endblock %}

{% block main %}
    <div id="main">
        <h1>Mode de paiement</h1>
        <p class="bg-info">Choisissez le mode de paiement.</p>
        <div id="box-inscription-elected-payment">
            {% for payment in payments %}
                <div class="payment-choice">
                    <input type="radio" name="radio-choice" action="payment-choice"><label>{{ payment.title }}</label>
                    <div class="payment-detail">
                        {{ payment.description | raw }}
                        <br/>
                        <a action="payment-process" class="btn btn-success" pOPaymentTypeId="{{ payment.id }}">proc√©der au paiement</a>
                    </div>
                </div>
            {% endfor %}
        </div>
        <hr>
    </div>
{% endblock main %}

{% block javascriptFooter %}
    {{ parent() }}

    {% javascripts
        '@PolitizrFrontBundle/Resources/public/js/politizr/security/payment.js'
        filter='uglifyjs2' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock javascriptFooter %}
