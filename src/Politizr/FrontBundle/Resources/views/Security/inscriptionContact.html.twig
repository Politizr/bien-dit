{% extends 'PolitizrFrontBundle::layoutPublic.html.twig' %}

{% block title %}
    Inscription Ã©tape 2 / 3 - {{ parent() }}
{% endblock title %}

{% block main %}
    <div id="public">
        <div class="center">
            {% if form.vars.errors|length %}
                <div class="box-error">
                    {{ form_errors(form) }}
                </div>
            {% endif %}

            <div id="box-inscription-contact">
                {{ form_start(form, {'action': path('InscriptionContactCheck'), 'method': 'POST', 'style': 'horizontal'}) }}
                    {{ form_row(form.gender) }}
                    {{ form_row(form.name) }}
                    {{ form_row(form.firstname) }}
                    {{ form_row(form.newsletter) }}

                    <button type="submit">Valider</button>

                {{ form_end(form) }}
                <span class="label label-warning pull-right">Tous les champs sont obligatoires</span>
            </div>
        </div>
    </div>
{% endblock main %}
