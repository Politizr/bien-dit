{% extends 'PolitizrFrontBundle:Fragment\\Debate:Detail.html.twig' %}

{% block detailHeader %}
	{# Infos générales #}
	{% set urlBack = path('MyDebatesC') %}
	{% if isGrantedE() %}
		{% set urlBack = path('MyDebatesE') %}
	{% endif %}
	<div class="row">
		<div class="col-sm-8">
			<h1>{{ debate.title }}</h1>
		</div>

		<div class="col-sm-1 text-center">
			&nbsp;
		</div>
		<div class="col-sm-1 text-center">
			<span class="label label-default pull-right">non publié</span>
		</div>
		<div class="col-sm-1 text-center">
			<a class="btn btn-primary" href="{{ path('DebateDraftEdit', { 'id': debate.id }) }}">Editer</a>
		</div>
		<div class="col-sm-1 text-center">
			<a action="debate-publish" class="btn btn-danger" object-id="{{ debate.id }}" url="{{ urlBack }}">Publier</a>
		</div>
	</div>
{% endblock detailHeader %}

