<div>
	{% if app.user %}
		{% if isFollower %}
			<a class="btn btn-warning" action="unfollow" objectId="{{ objectId }}" objectType="{{ objectType }}">Ne plus suivre</a>
		{% else %}
			<a class="btn btn-success" action="follow" objectId="{{ objectId }}" objectType="{{ objectType }}">Suivre</a>
		{% endif %}
	{% else %}
		<a class="btn btn-primary" href="{{ path('Inscription') }}" objectId="{{ objectId }}" objectType="{{ objectType }}">M'inscrire pour suivre</a>
	{% endif %}
</div>