<div class="debate-header">
	<div class="row">
		<div class="col-sm-6">
			{% if not full %}
				<h3><a class="bg-info" href="{{ path('DebateDetail', { 'id': debate.id, 'slug': debate.slug }) }}">{{ debate.title | slice(0, 100)}}</a></h3>
			{% else %}
				<h3>{{ debate.title }}</h3>
			{% endif %}
		</div>
		<div class="notes col-sm-2 text-center">
			{{ linkNote(debate, constant('Politizr\\Model\\PDocument::TYPE_DEBATE')) }}
		</div>
		<div class="col-sm-2 text-center">
			<span class="label label-info text-center">vu {{ debate.nbViews }} fois</span>
		</div>
		<div class="col-sm-2 text-center">
			<span class="label label-default text-center">publi√© le {{ debate.publishedAt | localizeddate('medium', 'short', app.request.locale, "Europe/Paris", "EEEE d MMMM HH'h'mm" ) | capitalize }}</span>
		</div>
	</div>
	<div class="row" action="user-more-info">
		<div class="author-mini-block col-sm-12">
			{% include 'PolitizrFrontBundle:Fragment:UserMiniBlock.html.twig' with {'user': debate.pUser } only %}
		</div>
	</div>
</div>
<hr>
<div class="debate-tags">
	<!-- TAGS -->
	<div class="row text-center">
		<div class="col-sm-6">
			{{ debateTags(debate, constant('\\Politizr\\Model\\PTTagType::TYPE_GEO')) }}
		</div>
		<div class="col-sm-6">
			{{ debateTags(debate, constant('\\Politizr\\Model\\PTTagType::TYPE_THEME')) }}
		</div>
	</div>
</div>
<hr>
<div class="row text-center">
	<!-- FOLLOWERS -->
	{% include 'PolitizrFrontBundle:Fragment:FollowersBlock.html.twig' with {'nbC': debate.countFollowersC, 'nbQ': debate.countFollowersQ, 'followersC': debate.followersC, 'followersQ': debate.followersQ } only %}
</div>
{% if full %}
	<hr>
	<div class="debate-image">
		<div class="row text-center">
			{% if debate.fileName %}
				<img class="img-responsive" src="{{ asset('uploads/documents/'~debate.fileName) | imagine_filter('debate_header') }}" />
			{% else %}
				<img class="img-responsive" src="{{ asset('bundles/politizrfront/images/default_debate.jpg') | imagine_filter('debate_header') }}">
			{% endif %}
		</div>
	</div>
{% endif %}
<hr>
<div class="debate-summary jumbotron">
	<div class="debate-summary">
		{{ debate.summary | raw }}
	</div>
	<div class="star text-center">
		{{ linkFollow(debate, constant('Politizr\\Model\\PDocument::TYPE_DEBATE')) }}
	</div>
</div>
{% if full %}
	<hr>
	<div class="debate-body">
		{% for paragraph in paragraphs %}
			<div class="paragraph">
				<div class="row debate-description sizeup">
					<div class="counter col-sm-1">
						{% include 'PolitizrFrontBundle:Fragment:NbComments.html.twig' with {'document': debate.document, 'paragraphNo': loop.index } only %}
					</div>
					<div class="col-sm-11">
						<p>{{ paragraph | raw }}</p>
					</div>
				</div>
				<div class="comments"></div>
			</div>
		{% endfor %}
	</div>
	{% if debate.moreInfo | striptags | trim is not empty %}
		<hr>
		<div class="debate-more-info well">
			{{ debate.moreInfo | raw }}
		</div>
	{% endif %}
{% endif %}
<hr>