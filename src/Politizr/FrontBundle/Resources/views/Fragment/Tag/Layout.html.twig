{# Bloc détail d'un tag #}
{% block listRow %}
	{% if (tag.ptTagTypeId == constant('\\Politizr\\Model\\PTTagType::TYPE_GEO')) %}
		{% set twbLabel = "success" %}
	{% elseif (tag.ptTagTypeId == constant('\\Politizr\\Model\\PTTagType::TYPE_THEME'))%}
		{% set twbLabel = "primary" %}
	{% else %}
		{% set twbLabel = "default" %}
	{% endif %}

	<span class="tag label label-{{ twbLabel }}">
		{{ tag.title }}
		<a action="deleteTag" path="{{ deleteUrl }}" tag-id="{{ tag.id }}" object-id="{{ objectId }}">&times;</a>
	</span>
{% endblock listRow %}

{% block list %}
	{% if (tagTypeId == constant('\\Politizr\\Model\\PTTagType::TYPE_GEO')) %}
		{% set twbLabel = "success" %}
		{% set tagLabel = "géo" %}
	{% elseif (tagTypeId == constant('\\Politizr\\Model\\PTTagType::TYPE_THEME'))%}
		{% set twbLabel = "primary" %}
		{% set tagLabel = "thème" %}
	{% else %}
		{% set twbLabel = "default" %}
		{% set tagLabel = "" %}
	{% endif %}

	{% for tag in tags %}
		<span class="tag label label-{{ twbLabel }}">{{ tag.title }}</span>
	{% else %}
		<span class="label label-default">Aucun tag {{ tagLabel }}</span>
	{% endfor %}
{% endblock list %}
