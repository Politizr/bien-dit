<div class="author-block">
	{% if pUser %}
		<hr>
		<div class="row text-center">
			<div class="col-sm-4">
				<div class="image">
					{% if (pUser.fileName) %}
			            <img class="img-rounded" src="{{ asset('uploads/users/'~pUser.fileName) | imagine_filter('user_bio_mini_thumb') }}" alt="{{ pUser.name }}">
			        {% else %}
			            <img  class="img-rounded" src="{{ asset('bundles/politizrfront/images/default_user.png') | imagine_filter('user_mini_thumb') }}" alt="{{ pUser.name }}">
		        	{% endif %}
		        </div>
			</div>
			<div class="col-sm-4">
				<div class="identity">
					<h3>
						<a href="{{ path('UserDetail', { 'id': pUser.id, 'slug': pUser.slug }) }}">{{ pUser }}</a>&nbsp;<span class="badge alert-success">{{ pUser.reputationScore }}</span>
					</h3>
				</div>
			</div>
			<div class="col-sm-4">
				<div class="type">
					<h3>
						{% if pUser.pUTypeId == constant('Politizr\\Model\\PUType::TYPE_CITOYEN') %}
							<span class="label label-primary">Citoyen</span>
						{% else %}
							<span class="label label-danger">Élu</span>
						{% endif %}
					</h3>
				</div>
			</div>
		</div>
		<hr>
		{% if full %}
			<div class="row">
				<div class="bio">
						<p>{{ pUser.biography | raw  }}</p>
				</div>
			</div>
			<hr>
		{% endif %}	
		<div class="row">
			{% if pUser.pUTypeId == constant('Politizr\\Model\\PUType::TYPE_QUALIFIE') %}
				{% if full %}
					{% set qualifications = pUser.qualifications %}
					{% for qualification in qualifications %}
						{% include 'PolitizrFrontBundle:Fragment:QualificationBlock.html.twig' with {'qualification': qualification, 'full': full } only %}
						{% if not loop.last %}<hr>{% endif %}
					{% else %}
						<span class="label label-danger">Aucun mandat renseigné</span>
					{% endfor %}
				{% else %}
					{% set qualification = pUser.currentQualification %}
					{% if qualification %}
						{% include 'PolitizrFrontBundle:Fragment:QualificationBlock.html.twig' with {'qualification': qualification, 'full': full } only %}
					{% else %}
						<span class="label label-danger">Aucun mandat renseigné</span>
					{% endif %}
				{% endif %}
			{% endif %}
		</div>
		<hr>
		<div class="user-tags">
			<!-- TAGS -->
			<div class="row text-center">
				<div class="col-sm-6">
					{{ userTaggedTags(pUser, constant('\\Politizr\\Model\\PTTagType::TYPE_GEO')) }}
				</div>
				<div class="col-sm-6">
					{{ userTaggedTags(pUser, constant('\\Politizr\\Model\\PTTagType::TYPE_THEME')) }}
				</div>
			</div>
		</div>
		<hr>
		<div class="row text-center">
			<!-- REPUTATION / BADGES -->
			<div id="badges">
				{% for badge in pUser.badges %}
					<span class="label  {{ badgeMetalTwBootClass(badge.PRBadgeMetalId) }}">{{ badge.title }}</span>
				{% else %}
					<span class="label label-default">Aucun badge</span>
				{% endfor %}
			</div>
		</div>
		<hr>
		<div class="row text-center">
			<!-- FOLLOWERS -->
			{% include 'PolitizrFrontBundle:Fragment:FollowersBlock.html.twig' with {'nbC': pUser.countPUserFollowersC, 'nbQ': pUser.countPUserFollowersQ, 'followersC': pUser.pUserFollowersC, 'followersQ': pUser.pUserFollowersQ } only %}
		</div>
		<hr>
		<div class="row text-center">
			<div class="star">
				{{ linkFollow(pUser.id, 'user') }}
			</div>
		</div>
	{% else %}
		<div class="author-infos">
			<span class="label label-danger">Auteur supprimé</span>
		</div>
	{% endif %}
</div>