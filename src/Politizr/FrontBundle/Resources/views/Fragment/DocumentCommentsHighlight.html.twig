<div id="comments-hightlight">
	{% for comment in globalComments | slice(0, 5) %}
		<div id="comment">
			<div id="description">{{ comment.description | raw }}</div>
			<div id="notePos">{{ comment.notePos }} +</div>
			<div id="noteNeg">{{ comment.noteNeg }} -</div>
		</div>
	{% else %}
		<div class="no-result">
			Aucun commentaire pour le moment
		</div>
	{% endfor %}
	{% if globalComments | length > 5 %}
		<a>Lire tous les commentaires</a>
	{% endif %}
</div>