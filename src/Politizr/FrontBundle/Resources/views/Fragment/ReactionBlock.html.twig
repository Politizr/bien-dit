<div class="reaction-header">
	<div class="row">
		<h3>
			<div class="col-sm-10">
				{% if not full %}
					<a class="bg-warning" href="{{ path('ReactionDetail', { 'id': pdReaction.id, 'slug': pdReaction.slug }) }}">{{ pdReaction.title | slice(0, 100) }}</a>
				{% else %}
					<span class="glyphicon glyphicon-bullhorn"></span>
					{{ pdReaction.title }}
				{% endif %}
			</div>
		</h3>
		<div class="col-sm-2 text-center">
			<span class="label label-default pull-right">publié le {{ pdReaction.publishedAt | localizeddate('medium', 'short', app.request.locale, "Europe/Paris", "EEEE d MMMM HH'h'mm" ) | capitalize }}</span>
		</div>
	</div>

	<!--
	<div>
		<hr>
		DEBUG NESTED SET - 
		isRoot {{ pdReaction.isRoot }} - 
		isLeaf {{ pdReaction.isLeaf }} - 
		getLevel {{ pdReaction.getLevel }} - 
		hasChildren {{ pdReaction.hasChildren }} - 
		countChildren {{ pdReaction.countChildren }} - 
		hasPrevSibling {{ pdReaction.hasPrevSibling }} - 
		hasNextSibling {{ pdReaction.hasNextSibling }} - 
	</div>
	-->
	{% if pdReaction.level > 1 %}
		{% set parentReaction = pdReaction.getParent %}
		<h4 class="label label-warning">En réaction à "<a href="{{ path('ReactionDetail', { 'id': parentReaction.id, 'slug': parentReaction.slug }) }}">{{ parentReaction.title }}</a>"</h4>
	{% endif %}
	<h4>
		<div cssActionId="user-more-info" class="row">
			<a class="label label-info">par {{ pdReaction.pUser }}</a>
		</div>
		<div class="row" action="user-infos">
			<hr>
			{% include 'PolitizrFrontBundle:Fragment:UserBlock.html.twig' with { 'pUser': pdReaction.pUser, 'full': false } only %}
		</div>
	</h4>
</div>
<hr>
<div class="reaction-summary well">
	<div class="reaction-summary">
		{{ pdReaction.summary | raw }}
	</div>
</div>
{% if full %}
	<hr>
	<div class="reaction-body">
		<div class="reaction-description">
			{{ pdReaction.description | raw }}
		</div>
		{% if reaction.moreInfo | striptags | trim is not empty %}
			<hr>
			<div class="reaction-more-info well">
				{{ reaction.moreInfo | raw }}
			</div>
		{% endif %}
	</div>
{% endif %}
<hr>