<div class="comment">
	<div class="commentDescription row">
		<div class="col-sm-2 text-center">
			<a href="{{ path('UserDetail', { 'id': comment.pUser.id, 'slug': comment.pUser.slug }) }}">
				{% if (comment.pUser.fileName) %}
		            <img src="{{ asset('uploads/users/'~comment.pUser.fileName) | imagine_filter('user_mini_thumb') }}" alt="{{ comment.pUser.name }}">
		        {% else %}
		            <img src="{{ asset('bundles/politizrfront/images/default_user.png') | imagine_filter('user_mini_thumb') }}" alt="{{ comment.pUser.name }}">
	        	{% endif %}
			</a>
		</div>
		<div class="col-sm-8">
			{% if (debateLink) %}
				{% set debate = comment.debate %}
				<a href="{{ path('DebateDetail', { 'id': debate.id, 'slug': debate.slug }) }}">
			{% endif %}
				<em>"{{ comment.description }}"</em>
			{% if (debateLink) %}
				</a>
			{% endif %}
			{% if comment.paragraphNo != 0 %}
				(paragraphe n°{{ comment.paragraphNo }})
			{% endif %}		
		</div>
		<div class="col-sm-2">
			<span class="label label-default">publié le {{ comment.publishedAt | localizeddate('medium', 'short', app.request.locale, "Europe/Paris", "EEEE d MMMM HH'h'mm" ) | capitalize }}</span>
		</div>
	</div>
	<div class="commentAuthor row text-center">
		<div class="col-sm-12">
			{% include 'PolitizrFrontBundle:Fragment:Notation.html.twig' with { 'object': comment } only %}
		</div>
	</div>
</div>
<hr>