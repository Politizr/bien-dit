{% extends_admingenerated "PolitizrAdminBundle:PQOrganizationList:row.html.twig" %}

{% block list_td_column_file_name %}
    <img src="{{ asset('/uploads/organizations/'~PQOrganization.fileName) | imagine_filter('admin_list_thumb') }}" alt="{{ PQOrganization.title }}">
{% endblock list_td_column_file_name %}

{% block object_action_moveup %}
    {% spaceless %}
        {% if not PQOrganization.isFirst() %}
            <a class="btn btn-default btn-xs" href="{{ path("Politizr_AdminBundle_PQOrganization_object", { 'pk': PQOrganization.Id, action: 'moveUp' }) }}" 
                data-original-title="{% trans from "Admin" %}+Haut{% endtrans %}" rel="tooltip">
                <i class="fa fa-fw fa-arrow-up"></i>
            </a>
        {% endif %}
    {% endspaceless %}
{% endblock object_action_moveup %}

{% block object_action_movedown %}
    {% spaceless %}
        {% if not PQOrganization.isLast() %}
            <a class="btn btn-default btn-xs" href="{{ path("Politizr_AdminBundle_PQOrganization_object", { 'pk': PQOrganization.Id, action: 'moveDown' }) }}" 
                data-original-title="{% trans from "Admin" %}+Bas{% endtrans %}" rel="tooltip">
                <i class="fa fa-fw fa-arrow-down"></i>
            </a>
        {% endif %}
    {% endspaceless %}
{% endblock object_action_movedown %}