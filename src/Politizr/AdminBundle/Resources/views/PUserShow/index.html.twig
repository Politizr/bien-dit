{% extends_admingenerated "PolitizrAdminBundle:PUserShow:index.html.twig" %}

{# Autocomplete CSS #}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/politizrfront/css/ui-lightness/jquery-ui-1.10.4.custom.css') }}">
{% endblock %}

{# Contenus #}
{% block show_column_summary %}
    {{ PUser.summary | raw }}
{% endblock %}

{% block show_column_biography %}
    {{ PUser.biography | raw }}
{% endblock %}


{# Image #}
{% block show_column_file_name %}
    <img src="{{ asset('uploads/users/'~PUser.fileName) | imagine_filter('admin_show_thumb') }}" alt="{{ PUser.fileName }}" />
{% endblock %}

{# Bloc tags #}
{% block show_column_block_tags_geo %}
    {{ adminUserTags(PUser, constant('\\Politizr\\Constant\\TagConstants::TAG_TYPE_GEO'), 2, 'show') }}
{% endblock %}

{# Blocs badges #}
{% block show_column_block_badges_debat %}
    {{ adminUserBadges(PUser, constant('\\Politizr\\Constant\\ReputationConstants::BADGE_TYPE_DEBATE'), 1) }}
{% endblock %}

{% block show_column_block_badges_comment %}
    {{ adminUserBadges(PUser, constant('\\Politizr\\Constant\\ReputationConstants::BADGE_TYPE_COMMENT'), 2) }}
{% endblock %}

{% block show_column_block_badges_participation %}
    {{ adminUserBadges(PUser, constant('\\Politizr\\Constant\\ReputationConstants::BADGE_TYPE_PARTICIPATION'), 3) }}
{% endblock %}

{% block show_column_block_badges_moderation %}
    {{ adminUserBadges(PUser, constant('\\Politizr\\Constant\\ReputationConstants::BADGE_TYPE_MODERATION'), 4) }}
{% endblock %}

{% block show_column_block_badges_autre %}
    {{ adminUserBadges(PUser, constant('\\Politizr\\Constant\\ReputationConstants::BADGE_TYPE_OTHER'), 5) }}
{% endblock %}


{# Bloc débats #}
{% block show_column_block_debates %}
    {{ adminUserDebates(PUser) }}
{% endblock %}

{# Bloc réactions #}
{% block show_column_block_reactions %}
    {{ adminUserReactions(PUser) }}
{% endblock %}


{# Bloc commentaires documents #}
{% block show_column_block_comments %}
    {{ adminUserComments(PUser) }}
{% endblock %}


{# Bloc followers qualifiés #}
{% block show_column_block_followers_q %}
    {{ adminUserFollowersQ(PUser) }}
{% endblock %}

{# Bloc followers citoyens #}
{% block show_column_block_followers_c %}
    {{ adminUserFollowersC(PUser) }}
{% endblock %}

{# Bloc subscribers qualifiés #}
{% block show_column_block_subscribers_q %}
    {{ adminUserSubscribersQ(PUser) }}
{% endblock %}

{# Bloc subscribers citoyens #}
{% block show_column_block_subscribers_c %}
    {{ adminUserSubscribersC(PUser) }}
{% endblock %}

{# Bloc affinités politiques #}
{% block show_column_block_affinities %}
    {{ adminUserAffinities(PUser) }}
{% endblock %}


{% block generic_actions_script %}
    {% include 'PolitizrAdminBundle:Fragment:tags.js.twig' with { 'nbZones': 2 } %}
{% endblock %}
