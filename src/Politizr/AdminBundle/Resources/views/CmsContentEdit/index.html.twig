{% extends_admingenerated "PolitizrAdminBundle:CmsContentEdit:index.html.twig" %}

{% block javascripts_head %}
    {{ parent() }}

    <span id="tinmce-options" image-upload="true" image-upload-path="{{ path('Politizr_tmce_file_upload', { 'pk': CmsContent.id, 'modelClass': constant('Politizr\\Constant\\ObjectTypeConstants::TYPE_CMS_CONTENT'), 'maxWidth': constant('Politizr\\Constant\\DocumentConstants::DOC_IMAGE_MAX_WIDTH'), 'maxHeight': constant('Politizr\\Constant\\DocumentConstants::DOC_IMAGE_MAX_HEIGHT') }) }}" />

    {# TinyMCE #}
    {% if is_granted('ROLE_SYSTEM') %}
        {% include "PolitizrAdminBundle::tinymce-full.html.twig" %}
    {% else %}
        {% include "PolitizrAdminBundle::tinymce-light.html.twig" %}
    {% endif %}

    <!-- StudioEchoMediaBundle JS -->
    <script src="{{ asset("bundles/studioechomedia/js/jquery.fineuploader-3.0.min.js") }}"></script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <!-- StudioEchoMediaBundle CSS -->
    <link rel="stylesheet" href="{{ asset("bundles/studioechomedia/css/fineuploader.css") }}">
    <link rel="stylesheet" href="{{ asset("bundles/studioechomedia/css/media-bundle.css") }}">
{% endblock %}
