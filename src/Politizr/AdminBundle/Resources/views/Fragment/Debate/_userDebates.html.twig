<div id="displayDebatesZone">
    {% if debates | length > 0 %}
        <b>{{ debates | length }} débats ont été rédigés par {{ user }}</b>
    {% else %}
        <b>Aucun débat rédigé par {{ user }}</b>
    {% endif %}
    <hr>
    {% for debate in debates %}
        {% include 'PolitizrAdminBundle:Fragment\\Debate:_debate.html.twig' with { 'debate': debate } %}
    {% endfor %}
</div>
