<div id="displayCommentsZone">
    <a href="{{ path('Politizr_AdminBundle_PDDebate_Comments', { 'pk': pdDebate.id }) }}">
        {% if pdComments | length > 0 %}
            <b>{{ pdComments | length }} commentaires ont été rédigés pour ce débat.</b>
        {% else %}
            <b>Aucun commentaire rédigé pour ce débat.</b>
        {% endif %}
    </a>
    <hr>
    {% for pdComment in pdComments %}
        {% include 'PolitizrAdminBundle:Fragment:DebateComment.html.twig' with { 'pdComment': pdComment } %}
    {% endfor %}
</div>
