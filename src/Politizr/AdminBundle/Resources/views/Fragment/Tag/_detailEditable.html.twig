{% spaceless %}
{% if (tag.ptTagTypeId == constant('\\Politizr\\Constant\\TagConstants::TAG_TYPE_GEO')) %}
    {% set twbLabel = "success" %}
{% elseif (tag.ptTagTypeId == constant('\\Politizr\\Constant\\TagConstants::TAG_TYPE_THEME'))%}
    {% set twbLabel = "primary" %}
{% else %}
    {% set twbLabel = "default" %}
{% endif %}

<div class="tagLabel {{ twbLabel }}{% if tag.hasVirtualColumn('hidden') and tag.virtualColumn('hidden') %} tagInvisible{% endif %}" tagUuid="{{ tag.uuid }}" uuid="{{ uuid }}">
{{ tag.title }}{% if withHidden %}<a action="hideTag" path="{{ pathHide }}"><i class="fa fa-eye-slash"></i></a>{% endif %}
<a action="deleteTag" path="{{ pathDelete }}"><i class="fa fa-close"></i></a>
</div>
{% endspaceless %}
