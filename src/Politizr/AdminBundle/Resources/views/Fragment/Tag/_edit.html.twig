<div class="addTag withLoaderInside" id="editTagZone-{{ zoneId }}" tagTypeId="{{ tagTypeId }}" uuid="{{ object.uuid }}" newTag="{{ newTag }}" withHidden="{{ withHidden }}" path="{{ pathCreate }}">
    <div class="ajaxLoader" style="display: none;">
        <div class="ajaxLoaderSpinner"></div><div class="ajaxLoaderBg"></div><div class="ajaxLoaderBlockClick"></div>
    </div>

    <div class="editableTagList">
        {% for tag in tags %}
            {% include 'PolitizrAdminBundle:Fragment\\Tag:_detailEditable.html.twig' with { 'uuid': object.uuid, 'tag': tag } %}
        {% endfor %}
    </div>

    <hr/>
    
    {# SÃ©lection #}
    <input type="text" class="selectedTag" placeholder="tag" />
    <input type="hidden" class="selectedTagUuid" />
    <button type="button" action="addTag">Ajouter</button>
</div>
