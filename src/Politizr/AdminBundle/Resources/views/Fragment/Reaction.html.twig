<div class="pdReaction">
	<div class="pdReaction-description">{{ pdReaction.description | striptags | slice(0, 250) | raw }}...</div>
	<hr>
	<div class="pdReaction-online">{% if pdReaction.online %}En ligne{% else %}Hors ligne{% endif %}</div>
	<div class="pdReaction-published">Publi√© le {{ pdReaction.publishedAt | date('d/m/Y H:i') }}</div>
	<hr>
	<div class="pdReaction-author"><a href="{{ path('Politizr_AdminBundle_PUser_edit', { 'pk': pdReaction.PUser.id }) }}">{{ pdReaction.PUser }}</a>&nbsp;({{ pdReaction.PUser.PUType }} / {{ pdReaction.PUser.PUStatus }})</div>
	<div class="pdReaction-note"><b>{{ pdReaction.notePos }} +</b> &nbsp; <b>{{ pdReaction.noteNeg }} -</b></div>
	<hr>
	<a href="{{ path('Politizr_AdminBundle_PDReaction_edit', { 'pk': pdReaction.id }) }}">Editer</a>&nbsp;-&nbsp; 
	<a href="{{ path('Politizr_AdminBundle_PDReaction_show', { 'pk': pdReaction.id }) }}">Consulter</a>
	<hr>
</div>