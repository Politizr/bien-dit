{% extends_admingenerated "PolitizrAdminBundle:PCircleEdit:form.html.twig" %}

{# Image block #}
{% block form_row_block_logo_file_name %}
    <div class="form-group col-md-4">
        <label class="control-label">Image</label>
        <div id="dropzone" class="dropzone" path="{{ path('Politizr_AdminBundle_PCircle_filename_upload', {'pk': PCircle.id}) }}" deletePath="{{ path('Politizr_AdminBundle_PCircle_filename_delete', {'pk': PCircle.id}) }}" {% if PCircle.LogoFileName %}currentFileName="{{ PCircle.LogoFileName }}" uploadPath="{{ constant('Politizr\\Constant\\PathConstants::CIRCLE_UPLOAD_WEB_PATH') }}" fileSize="{{ PCircle | circleFileSize }}"{% endif %}>
            <div class="dz-message uploadLink" data-dz-message><span class="btn btn-primary">Télécharger</span></div>
        </div>
        <div id="dz-preview-container">
        </div>
        {% include "PolitizrAdminBundle:Fragment:_dropzoneTemplate.html.twig" %}
    </div>
{% endblock %}


{# Blocs réglages #}
{% block form_row_open_reaction %}
    {{ form_row(form['open_reaction']) }}
    <i class="fa fa-info-circle" aria-hidden="true">&nbsp;Cocher si tous les utilisateurs peuvent publier des réponses.</i><br/><br/>
{% endblock %}
{% block form_row_read_only %}
    {{ form_row(form['read_only']) }}
    <i class="fa fa-info-circle" aria-hidden="true">&nbsp;Cocher si la consultation est terminée et disponible uniquement en lecture.</i><br/><br/>
{% endblock %}
{% block form_row_step %}
    {{ form_row(form['step']) }}
    <i class="fa fa-info-circle" aria-hidden="true">&nbsp;Etape du budget participatif.</i><br/><br/>
{% endblock %}
