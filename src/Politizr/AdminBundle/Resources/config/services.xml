<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="politizr_admin.email_order_customer" class="Politizr\AdminBundle\EventListener\EmailSubscriber">
            <tag name="kernel.event_subscriber" />

            <argument type="service" id="logger" />
            <argument type="service" id="mailer" />
            <argument type="service" id="templating" />
        </service>


        <service id="politizr_admin.pdf_order_customer" class="Politizr\AdminBundle\EventListener\PDFSubscriber">
            <tag name="kernel.event_subscriber" />

            <argument type="service" id="logger" />
            <argument type="service" id="mailer" />
            <argument type="service" id="templating" />

            <argument type="service" id="html2pdf" />
        </service>


        <service id="politzr.twig.admin_ajax_extension" class="Politizr\AdminBundle\Twig\AdminAjaxExtension">
            <argument type="service" id="service_container" />
            <tag name="twig.extension" />
        </service>

    </services>

</container>